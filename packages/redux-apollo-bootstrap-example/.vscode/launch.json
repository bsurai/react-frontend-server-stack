{
    // Use IntelliSense to learn about possible Node.js debug attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        
        {
            "type": "node",
            "request": "launch",
            "name": "Запустить программу",
            "sourceMaps": true,
            "program": "${workspaceRoot}\\src\\index.tsx"
        },
        
        {
            "type": "node",
            "request": "attach",
            "name": "Подключить к порту",
            "address": "localhost",
            "sourceMaps": true,
            "port": 5858
        },
        {
            "name": "Launch localhost",
            "type": "chrome",
            "request": "launch",
            "sourceMaps": true,
            "url": "http://localhost:8080", //"http://localhost/mypage.html",
            "webRoot": "${workspaceRoot}",//"${workspaceRoot}/app/files"
            "sourceMapPathOverrides": {
                "webpack:///./*": "${webRoot}/*"
            }
        },
        {
            "name": "Launch index.html (disable sourcemaps)",
            "type": "chrome",
            "request": "launch",
            "sourceMaps": true,
            "file": "${workspaceRoot}/index.html",
            "sourceMapPathOverrides": {
                "webpack:///./*": "${webRoot}/*"
            }
        },
        {
            "name": "Attach",
            "type": "chrome",
            "request": "attach",
            "port": 9222,
            "sourceMaps": true,
            "url": "http://localhost:8080",
            "webRoot": "${workspaceRoot}"
        },
        {
            "name": "Attach to url with files served from ./out",
            "type": "chrome",
            "request": "attach",
            "port": 9222,
            "sourceMaps": true,
            "url": "<http://localhost:8080/",
            "webRoot": "${workspaceRoot}"
        }
    ]
}